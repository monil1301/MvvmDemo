<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/lecture_number" />

    <TextView
        android:id="@+id/lecture_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/hours_on_demand_video"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lecture_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lecture_type_length"
        app:layout_constraintStart_toStartOf="@id/lecture_title"
        app:layout_constraintTop_toBottomOf="@id/lecture_title"
        android:text="@string/lecture_type_length"
        android:textColor="@color/textColor"
        android:layout_marginTop="4dp"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>